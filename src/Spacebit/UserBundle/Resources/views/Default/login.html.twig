{% extends 'base.html.twig' %}

{% block title %}Login{% endblock %}

{% block body %}
    {% set link_to_home = '../' %}
    {% include 'templates/navbar.html.twig' %}

    <!--Begin log in Area-->
    <div class="login-wrap group">

        <header class="signup-header">
            <h1 class="signup-logo" style="text-align:center;">Resource Manager</h1>
            <h2 class="little-big-header" style="text-align:center;">Log in!</h2>
        </header>

        <p><br></p>

        <div class="login-area">

                <!-- begin log in text fields-->
                <div align="center" >
                    <div id="login-email" class="field"  >
                        <label for="login-email-field">Username or Email</label>
                        <input id="login-email-field" name="email" required="required" type="text" size="30" value="" />
                    </div>

                    <div id="login-password" class="field">
                        <label for="login-password-field">Password</label>
                        <input id="login-password-field_" name="password" required="required" size="30" type="password" />
                    </div>

                    <div>
                        <input class="show-password" id="show-password" name="show-password" type="checkbox" value="" />
                        <label class="small-inline" for="show-password">Show Password</label>
                    </div>
                </div>
                <!-- end log in text fields-->


                <div id="login-error" align="center"></div>


                <div  align="center">
                    <label class="spacing-label">&nbsp;</label>

                    <button id="log-in-button" class="button green action-button expand-right">
                        <span class="label">Log in</span>
                        <span class="spinner"></span>
                    </button>

                    &nbsp;&nbsp;
                    <a href="#" id="forgot-password-link">
                        Forgot Password?
                    </a>
                </div>




                <!--start reset password section-->
                <div align="center" >
                    <h4><br>Reset Your Password</h4>

                    <div class="field">
                        <label for="forgot-email">Email</label>
                        <input type="email" id="forgot-email" name="forgot-email" placeholder="your@email.com">
                    </div>

                    <div class="field">
                        <input id="forgot-email-btn" type="submit" value="Send Password Reset Email" class="button button-medium">
                    </div>

                    <div id="sent-message">
                        <div id="sent-message-message"></div>
                    </div>
                </div>
            <!--end reset password section-->


            <!--Start create new account-->
            <div class="signup-callout" >
                Need an account? <a href="./signup">Sign up now!</a>
            </div>
            <!--end create new account-->

        </div>

    </div>
    <!--end of log in area-->

{% endblock %}