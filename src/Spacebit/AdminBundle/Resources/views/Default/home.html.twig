{% extends 'base.html.twig' %}

{% block title %}Admin{% endblock %}

{% block stylesheets %}
    <style>
        @keyframes img-in {
            0%   {opacity: 0.0; transform: translate(-50%, 0);}
            50%   {opacity: 0.0; transform: translate(-50%, 0);}
            100% {opacity: 1.0;}
        }

        .portfolio-item {
            animation-name: img-in;
            animation-duration: 2s;
            animation-timing-function: ease-out;
        }

        .img-portfolio {
            width: 108px;
            height: 100px;
        }

        .img-portfolio:hover {
            opacity: 0.75;
            cursor: pointer;
        }
    </style>
{% endblock %}

{% block body %}
    {% set link_to_home = '../' %}
    {% set active = {link:'Admin'} %}
    {% include 'templates/navbar.html.twig' %}

    <div class="row" style="width: 100%; text-align: center; padding: 50px;">
        <div class="col-lg-4 portfolio-item" style="margin: 0 auto;">
            <div class="portfolio-wrapper">
                <img class="img-portfolio" src="{{ asset('bundles/spacebitadmin/images/admin_manager_equipment_request.png') }}" alt="Manage Equipment Requests" onclick="window.location.href = './equipment'" />
                <h4 class="text-label">Manage Equipment{% if(equipment_request_count > 0) %} ({{ equipment_request_count }}){% endif %}</h4>
            </div>
        </div>
        <div class="col-lg-4 portfolio-item" style="margin: 0 auto;">
            <div class="portfolio-wrapper">
                <img class="img-portfolio" src="{{ asset('bundles/spacebitadmin/images/admin_manager_venues_request.jpg') }}" alt="Manage Venue Requests" onclick="window.location.href = './venues'" />
                <h4 class="text-label">Manage Venues{% if(venues_request_count > 0) %} ({{ venues_request_count }}){% endif %}</h4>
            </div>
        </div>
        <div class="col-lg-4 portfolio-item" style="margin: 0 auto;">
            <div class="portfolio-wrapper">
                <img class="img-portfolio" src="{{ asset('bundles/spacebitadmin/images/admin_manager_vehicles_request.png') }}" alt="Manage Vehicle Requests" onclick="window.location.href = './vehicles'" />
                <h4 class="text-label">Manage Vehicles{% if(vehicles_request_count > 0) %} ({{ vehicles_request_count }}){% endif %}</h4>
            </div>
        </div>
    </div>
{% endblock %}